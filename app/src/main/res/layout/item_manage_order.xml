<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/item_bg"
    android:elevation="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/adminNumberOrder"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="3dp"
        android:text="1"
        android:textAlignment="gravity"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/adminItemId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="ID: 1"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adminItemDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Order Date: 02/09/2022"
            android:textAlignment="gravity"
            android:textColor="@color/gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/adminItemDeliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Deliver Date: 02/09/2022"
            android:textAlignment="gravity"
            android:textColor="@color/gray"
            android:textSize="11sp" />

    </LinearLayout>


    <Button
        android:id="@+id/adminStatusButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingTop="2dp"
        android:paddingRight="15dp"
        android:paddingBottom="2dp"
        android:text="PENDING"
        android:textSize="13sp" />

</LinearLayout>